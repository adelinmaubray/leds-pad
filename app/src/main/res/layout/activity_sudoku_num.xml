<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adelin.ledspad.SudokuNum">


    <Button
        android:id="@+id/un"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="0"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="0"
        android:background="@color/colorAccent"
        android:onClick="sendOne"
        android:text="1"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/deux"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="1"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="0"
        android:background="@color/colorAccent"
        android:onClick="sendTwo"
        android:text="2"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/trois"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="2"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="0"
        android:background="@color/colorAccent"
        android:onClick="sendThree"
        android:text="3"
        android:textColor="@color/colorPrimaryDark" />


    <!-- deuxième ligne -->


    <Button
        android:id="@+id/quatre"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="0"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="1"
        android:background="@color/colorAccent"
        android:onClick="sendFour"
        android:text="4"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/cinq"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="1"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="1"
        android:background="@color/colorAccent"
        android:onClick="sendFive"
        android:text="5"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/six"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="2"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="1"
        android:background="@color/colorAccent"
        android:onClick="sendSix"
        android:text="6"
        android:textColor="@color/colorPrimaryDark" />


    <!-- Troisième ligne -->


    <Button
        android:id="@+id/sept"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="0"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="2"
        android:background="@color/colorAccent"
        android:onClick="sendSeven"
        android:text="7"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/huit"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="1"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="2"
        android:background="@color/colorAccent"
        android:onClick="sendEight"
        android:text="8"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/neuf"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="2"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="2"
        android:background="@color/colorAccent"
        android:onClick="sendNine"
        android:text="9"
        android:textColor="@color/colorPrimaryDark" />


    <!-- Les autres boutons !!-->


    <Button
        android:id="@+id/backButton"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="4"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="1"
        android:background="@null"
        android:onClick="openSudoku"
        android:text="BACK"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/effecerButton"
        android:layout_width="@dimen/button_sudoku_size"
        android:layout_height="@dimen/button_sudoku_size"
        android:layout_column="4"
        android:layout_marginLeft="@dimen/activity_margin_sudoku"
        android:layout_marginTop="@dimen/activity_margin_sudoku"
        android:layout_row="2"
        android:background="@null"
        android:onClick="sendZero"
        android:text="EFFACER"
        android:textColor="@color/colorPrimaryDark" />


</GridLayout>
